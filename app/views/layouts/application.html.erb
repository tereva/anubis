    <![endif]--> 

    <%= render 'layouts/google_analytics' if Rails.env.production? %>
  </head>

  <body>

    <%= render 'layouts/header' %>


<header>
   <div class="container"> 
    <%= render 'sites/search' %>
  </div>
</header>


    <div class="container">
      <%= yield %>
        <hr class="featurette-divider">
              <footer class="footer">
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Aitoweb 2017</p>
