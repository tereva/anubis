        <%= link_to 'Edit', edit_category_path(category), class: "btn btn-xs btn-success"  %>
          <%= link_to 'Show', category, class: "btn btn-xs btn-success"  %>
       <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-xs btn-success"  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

